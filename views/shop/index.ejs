<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/card.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>Shop Products Lists</h1>
        <% if(products.length > 0) { %>
            <div class="card__container">
                <% for(let p of products) { %>
                    <div class="card">
                        <div class="card_title"><%= p.title %></div>
                        <img src="<%=p.imageUrl%>" alt="" class="card_image">
                        <p class="card_price">$<%= p.price %></p>
                        <p class="card__desc"><%= p.description %></p>
                        <div class="card__actions">
                            <a href="/product/<%= p._id %>" class="btn__primary">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: p}) %>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h2>There is no product</h2>
        <% } %>
    </main>
<%- include('../includes/footer.ejs') %>